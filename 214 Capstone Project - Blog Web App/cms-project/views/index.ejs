<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <%- include('partials/header') %>
    <h1>Welcome to the CMS</h1>
    <a href="/posts/new" class="create-post">Create a New Post</a>
    <div class="posts">
      <% if (posts.length > 0) { %> <% posts.forEach(post => { %>
      <div class="post">
        <a href="/posts/<%= post.id %>"><h2><%= post.title %></h2></a>
      </div>
      <% }) %> <% } else { %>
      <p>No posts yet.</p>
      <% } %>
    </div>
    <%- include('partials/footer') %>
  </body>
</html>
