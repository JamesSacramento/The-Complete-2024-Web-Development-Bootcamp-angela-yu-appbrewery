<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Flag Quiz</title>
    <link rel="stylesheet" href="/styles/main.css" />
    <style>
      .horizontal-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      #flagContainer {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 20px 0;
      }
      #flagImage {
        font-size: 5rem; /* Adjust font size for visibility */
      }
    </style>
  </head>
  <body id="app">
    <form class="container" action="/submit" method="post">
      <div class="horizontal-container">
        <h3>
          Total Score:
          <span id="score"><%= totalScore || "0" %></span>
        </h3>
      </div>
      <div id="flagContainer">
        <div id="flagImage"><%= question.flag %></div>
      </div>
      <div class="answer-container">
        <input
          type="text"
          name="answer"
          id="userInput"
          placeholder="Name the country"
          autofocus
          autocomplete="off"
        />
      </div>
      <button type="submit">
        SUBMIT <% if (wasCorrect) { %>
        <span class="checkmark">✔</span>
        <% } else if (wasCorrect === false) { %>
        <span class="cross" id="error">✖</span>
        <% } %>
      </button>
    </form>
    <script>
      const wasCorrect = "<%= wasCorrect %>";
      console.log(wasCorrect);
      if (wasCorrect === "false") {
        alert("Game over! Final best score: <%= totalScore %>");
        document.getElementById("app").innerHTML =
          '<a href="/" class="restart-button">Restart</a>';
      }
    </script>
  </body>
</html>
